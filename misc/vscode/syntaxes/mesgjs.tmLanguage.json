{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Mesgjs",
  "scopeName": "source.mesgjs",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#storage"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#specials"
    },
    {
      "include": "#blocks"
    },
    {
      "include": "#messages"
    },
    {
      "include": "#lists"
    },
    {
      "xinclude": "#op-words"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.mesgjs",
          "match": "//.*"
        },
        {
          "name": "comment.block.mesgjs",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.mesgjs",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.mesgjs",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.mesgjs",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.mesgjs",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.mesgjs",
          "match": "[+-]?\\d+(\\.\\d+)?([eE][+-]?\\d+)?\\b"
        },
        {
            "name": "constant.numeric.int.mesgjs",
            "match": "[+-]?(0[bB][01]+|0[oO][0-7]+|0[xX][0-9a-fA-F]+|\\d+)n?\\b"
        }
      ],
      "xpatterns": [
      ]
    },
    "storage": {
      "patterns": [
        {
          "name": "storage.type.mesgjs",
          "match": "(\\!|#|%[*/]?)\\??"
        }
      ]
    },
    "specials": {
      "patterns": [
        {
          "name": "constant.language.mesgjs",
          "match": "(@[cdefntu]|@gss|@mid|@mps|@nan|@posinf|@neginf)\\b"
        },
        {
          "name": "support.function.mesgjs",
          "xmatch": "(@debug|@js)\\{"
        },
        {
            "name": "invalid.jk.block.returning.mesgjs",
            "match": "!(?=})",
            "settings": {
              "foreground": "#FF0000"
            }
        }
      ]
    },
    "blocks": {
      "patterns": [
        {
          "name": "meta.block.mesgjs",
          "begin": "\\{",
          "end": "\\}",
          "patterns": [
            {
              "include": "$self"
            }
          ]
        },
        {
            "name": "meta.block.jsembed.mesgjs",
            "begin": "@js\\{",
            "end": "@\\}"
        }
      ]
    },
    "messages": {
      "patterns": [
        {
          "name": "meta.message.mesgjs",
          "begin": "\\(",
          "end": "\\)",
          "patterns": [
            {
              "include": "$self"
            }
          ]
        }
      ]
    },
    "lists": {
      "patterns": [
        {
          "name": "meta.list.mesgjs",
          "begin": "\\[",
          "end": "\\]",
          "patterns": [
            {
              "include": "$self"
            }
          ]
        }
      ]
    },
    "op-words": {
      "patterns": [
        {
          "name": "keyword.operator.mesgjs",
          "match": "=(?=[!#%@:]|[+-]\\\\d)|(?![@:])(?:[`~@#$%^&*=|.:,;<>?]|/(?![/*])|!(?![}])|[+-](?!\\\\d))+"
        }
      ]
    }
  }
}
